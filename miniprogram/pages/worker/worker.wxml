<view class="container">
  <view class="card">
    <view style="margin-bottom: 20px;">
      <text style="font-weight: bold; color: var(--wafu-indigo); font-size: 18px;">欢迎, {{worker.name}}</text>
      <view style="margin-top: 5px; color: #666;">当前工位: <text style="color: var(--wafu-red); font-weight: bold;">{{worker.station}}</text></view>
    </view>
    
    <button class="btn-primary" bindtap="handleScan">扫码工作</button>
    
    <view style="margin-top: 20px;" wx:if="{{scanResult}}">
      <text>扫码结果: {{scanResult}}</text>
    </view>
    
    <view style="margin-top: 10px; font-weight: bold; color: var(--wafu-red);" wx:if="{{status}}">
      {{status}}
    </view>
    
    <button class="btn-secondary" style="margin-top: 30px;" bindtap="logout">退出登录</button>
  </view>
</view>
